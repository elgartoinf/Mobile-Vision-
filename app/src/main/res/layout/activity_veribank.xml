<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.digitalonboarding.VeribankActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:contentPaddingLeft="-6dp"
        app:contentPaddingRight="-6dp"
        app:contentPaddingTop="-9dp"
        app:contentPaddingBottom="-8dp"
        app:cardCornerRadius="0dp"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:background="@drawable/header_veribank"
            android:layout_marginBottom="9dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtSubtittle"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:text="@string/we_are_glad_to_welcome_you"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="@string/hello_andrew"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_above="@id/txtSubtittle"
                android:textColor="@color/cardview_light_background"
                android:textSize="34sp"
                android:id="@+id/txtTittle"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTittle2"
                    android:layout_width="match_parent"
                    android:text="@string/personal_checking_account"
                    android:layout_height="match_parent"
                    android:gravity="start|bottom"
                    android:layout_weight="1"
                    android:textColor="@color/azul_principal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txtSubtittle2"
                    android:layout_width="match_parent"
                    android:text="Some Text"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/count"
                    android:layout_width="match_parent"
                    android:text="$100,00"
                    android:layout_height="match_parent"
                    android:gravity="end|bottom"
                    android:layout_weight="1"
                    android:textColor="@color/azul_principal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTittle3"
                    android:layout_width="match_parent"
                    android:text="@string/personal_checking_account"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/azul_principal"
                    android:textSize="16sp"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/proximo"
                    android:layout_weight="5"
                    android:tint="@color/azul_principal"
                    android:layout_height="20dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1.2"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/txtTittle4"
                    android:layout_width="match_parent"
                    android:text="@string/found_your_new_account"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/azul_principal"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/proximo"
                    android:layout_weight="5"
                    android:tint="@color/azul_principal"
                    android:layout_height="20dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="2.3"
        android:background="#207cb3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/btnMoves"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="Moves"
            android:textColor="@color/cardview_light_background"
            android:gravity="center|bottom"
            android:drawableTop="@drawable/movimientos"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_transparent"
            android:onClick="retryOnboarding"
            android:paddingTop="3dp" />
        <TextView
            android:id="@+id/btnTransf"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center|bottom"
            android:text="Transf."
            android:textColor="@color/cardview_light_background"
            android:drawableTop="@drawable/transferencias"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_transparent"
            android:onClick="retryOnboarding"
            android:paddingTop="3dp" />
        <TextView
            android:id="@+id/btnPayment"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center|bottom"
            android:text="Payment"
            android:textColor="@color/cardview_light_background"
            android:drawableTop="@drawable/pagos"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_transparent"
            android:onClick="retryOnboarding"
            android:paddingTop="3dp" />
        <TextView
            android:id="@+id/btnSettings"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="Settings"
            android:textColor="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ajustes"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_transparent"
            android:onClick="retryOnboarding"
            android:paddingTop="3dp" />

    </LinearLayout>

</LinearLayout>
